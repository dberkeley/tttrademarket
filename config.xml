<widget xmlns     = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "TT Trade Market"
        version   = "1.0.0">
    <name>TT Trade Market</name>

    <description>
        A mobile application for Trinidad and Tobagos first online use market place.
    </description>

    <author href="www.vispercepts.com" email="dewayne.berkeley@vispercepts.com">
        Dewayne Berkeley
    </author>

    <access origin="*"/>
	
	
    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />
	
      <preference name="loglevel" value="DEBUG" />
	  <preference name="prerendered-icon" value="true" />
      <preference name="show-splash-screen-spinner" value="true" />
     <preference name="auto-hide-splash-screen" value="true" />
	  <preference name="splash-screen-duration" value="5000" />
      <preference name="backgroundColor" value="0xffffffff" />
  <!--		<preference name="loadUrlTimeoutValue" value="20000" />
      <preference name="InAppBrowserStorageEnabled" value="true" />
      <preference name="disallowOverscroll" value="true" />
    -->
	
	<gap:splash src="splash.png" />
	<icon src="icon.png" />
</widget>
